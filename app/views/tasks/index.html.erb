<h1>My Tasks</h1>

<ul>
  <% @tasks.each do |task| %>
    <li><input type="checkbox" <% if task.completed %>
      checked
    <% end %>><%= link_to task.title, task_path(task) %> <%= link_to "🗑️",
  task_path(task),
  data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}
%></li>
  <% end %>
</ul>

<%= link_to "Add new task", tasks_new_path %>
